<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Balance Details</title>
    <link rel="icon" type="image/x-icon" href="{{ url_for('static', filename='images/favicon.ico') }}">
    <!-- Add DataTables CSS -->
    <link rel="stylesheet" href="https://cdn.datatables.net/2.0.1/css/dataTables.dataTables.min.css">
    <!-- Your existing styles and scripts -->
    <link rel="stylesheet" href="{{ url_for('static', filename='css/balance_details.css') }}">
</head>
<body>
    <!-- Your existing table content -->
    <table id="balanceTable" border="1">
        <thead>
            <tr>
                <th>Bank</th>
                <th>Account Name</th>
                <th>As of</th>
                <th>Balance</th>
                <th>Available Balance</th>
            </tr>
        </thead>
        <tbody>
            {% for balance_details_data in bank_account_name_balance_details %}
            <tr>
                <td>{{ balance_details_data[0] }}</td>
                <td>{{ balance_details_data[1] }}</td>                
				<td>{{ balance_details_data[2].strftime("%B ") }}{{ balance_details_data[2].day }}, {{ balance_details_data[2].year }}</td>
                <td>{{ balance_details_data[3] | tocurrency }}</td>
                <td>{{ balance_details_data[4] | tocurrency }}</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
    <!-- Add DataTables JS after jQuery -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.datatables.net/2.0.1/js/dataTables.min.js"></script>
    <script src="{{ url_for('static', filename='js/balance_details.js') }}"></script>
</body>
</html>